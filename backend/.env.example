# Backend Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
# For local development:
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/bugtracker
# For Railway (auto-generated, don't set manually):
# DATABASE_URL=postgresql+asyncpg://user:pass@host:port/database

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# For local development:
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# For production (replace with your Vercel URL):
# ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:5173
